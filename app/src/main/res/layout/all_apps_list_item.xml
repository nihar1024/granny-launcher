<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/green_rounded_background_borderless"
    android:padding="@dimen/layout_padding_large">

    <ImageView
        android:id="@+id/app_icon_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_action_contacts" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/layout_margin_large"
        android:layout_toEndOf="@id/app_icon_image_view"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Test App Name - Report bug if seen"
        android:textAllCaps="true"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold" />

</RelativeLayout>